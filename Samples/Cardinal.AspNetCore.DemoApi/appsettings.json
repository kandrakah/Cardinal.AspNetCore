{
  "Host": {
    "UseIISIntegration": true,
    "Hosts": [ "https://localhost:5002" ]
  },

  "Authority": {
    "UsePermissionsService": true
  },

  "Swagger": {
    "Title": "Cardinal Sample API",
    "Version": "1.0",
    "Description": "Exemplo de API",
    "UseSecurity": true,
    "UsePkce": true,
    "AuthAppName": "Swagger UI",
    "ClientId": "Swagger",
    "Secret": "",
    "SecurityDefinitions": {
      "Type": "OAuth2",
      "Flows": {
        "Implicit": {
          "AuthorizationUrl": "https://localhost:5001/connect/authorize",
          "TokenUrl": "https://localhost:5001/connect/token",
          "Scopes": {
            "jp_api.user": "Demo API - full access"
          }
        }
      }
    }
  }
}